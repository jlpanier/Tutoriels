<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<!-- Inherit from the light Material Theme -->
	<style name="Theme.Material" parent="android:Theme.Material.Light">
	</style>

	<style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:colorPrimary">#5A8622</item>

		<!-- https://docs.microsoft.com/en-us/xamarin/android/user-interface/material-theme -->
		<item name="android:windowBackground">@color/windowBackground</item>

		<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="android:colorPrimary">@color/colorPrimary</item>

		<!-- colorPrimaryDark is used for the status bar -->
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>

		<!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
		<item name="android:colorAccent">@color/colorAccent</item>

		<!-- You can also set colorControlNormal, colorControlActivated, colorControlHighlight and colorSwitchThumbNormal. -->

		<!-- Option to hide the drop shadow here
          <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
          <item name="android:windowContentOverlay">@null</item>
        -->
	</style>

	<style name="Text.Titre" parent="AppTheme">
		<item name="android:textSize">@dimen/textXL</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">@dimen/MarginS</item>
		<item name="android:textAllCaps">false</item>
	</style>


	<style name="Text.Label" parent="Text.Titre">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">@dimen/textM</item>
		<item name="android:textColor">@color/textColorSecondary</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="Text.Edit" parent="Text.Titre">
		<item name="android:textSize">@dimen/textB</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textStyle">normal</item>
		<item name="android:selectAllOnFocus">true</item>
	</style>

	<style name="Text.Item1" parent="Text.Titre">
		<item name="android:textSize">@dimen/textB</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textStyle">normal</item>
		<item name="android:padding">0dp</item>
	</style>

	<style name="Text.Item2" parent="Text.Item1">
		<item name="android:textSize">@dimen/textM</item>
		<item name="android:textColor">@color/textColorSecondary</item>
		<item name="android:textStyle">italic</item>
		<item name="android:padding">0dp</item>
	</style>

	<style name="Text.Item3" parent="Text.Item2">
		<item name="android:textSize">@dimen/textM</item>
		<item name="android:textColor">@color/textColorSecondary</item>
		<item name="android:textStyle">italic</item>
	</style>

	<style name="TextView.Item" parent="Text.Label">
		<item name="android:textSize">@dimen/textH</item>
		<item name="android:textColor">@color/textColorSecondary</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="EditText" parent="Text.Label">
		<item name="android:textSize">@dimen/textB</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textStyle">normal</item>
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:background">@drawable/shape_roundrectangle_1xprimary_transparent</item>
	</style>

	<style name="EditText.Item" parent="EditText">
		<item name="android:textSize">@dimen/textB</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textStyle">normal</item>
		<item name="android:selectAllOnFocus">true</item>
	</style>

	<style name="ListView" parent="Text.Titre">
		<item name="android:divider">@color/textColorPrimary</item>
		<item name="android:dividerHeight">1px</item>
		<item name="android:cacheColorHint">@color/colorRed</item>
		<item name="android:footerDividersEnabled">false</item>
	</style>


	<style name="Button" parent="Text.Titre">
		<item name="android:textSize">@dimen/textB</item>
		<item name="android:textColor">@color/color50</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/shape_roundrectangle_primary</item>
		<item name="android:textAllCaps">true</item>
    <item name="android:layout_margin">@dimen/MarginS</item>
    <item name="android:contentDescription">Description</item>
    <item name="android:importantForAccessibility">no</item>
  </style>


	<style name="NumberPicker" parent="Text.Label">
		<item name="android:solidColor">@color/colorPrimary</item>
		<item name="android:showDividers">middle</item>
		<item name="android:layoutMode">clipBounds</item>
	</style>



	<style name="Spinner.Label" parent="Text.Label">
	</style>

	<style name="Spinner.Url" parent="Text.Label">
	</style>

	<style name="CheckBox.Label" parent="Text.Label">
	</style>


	<style name="GroupBox" parent="Text.Label">
		<item name="android:textSize">@dimen/textH</item>
		<item name="android:textColor">@color/textColorSecondary</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	</style>

	<style name="BarraProgreso" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">7dp</item>
		<item name="android:indeterminate">true</item>
	</style>

	<style name="View.Separator" parent="Text.Label">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">2dp</item>
		<item name="android:layout_margin">@dimen/MarginS</item>
		<item name="android:background">@color/colorPrimaryDark</item>
	</style>

  <style name="Item.Separator" parent="Text.Label">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_margin">@dimen/MarginS</item>
    <item name="android:background">@color/colorPrimaryDark</item>
  </style>

</resources>